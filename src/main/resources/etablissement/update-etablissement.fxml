<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Etablissement.UpdateEtablissementController">
    <GridPane prefHeight="300.0" prefWidth="300.0">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="idTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false"/>
        <Label text="X:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="xTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Y:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="yTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="nomTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="adresseTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="RESTAURANT"/>
                    <String fx:value="MAISON_HOTE"/>
                    <String fx:value="HOTEL"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Update" onAction="#handleUpdate" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>
</AnchorPane>
