<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="300" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Offre.Offre.AddOffreController">
    <Label text="Formulaire d'ajout d'offre" textFill="#0015ff">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Label>
    <TextField fx:id="nomTextField" promptText="Nom de l'offre">
      <VBox.margin>
         <Insets left="10.0" right="10.0" top="20.0" />
      </VBox.margin></TextField>
    <TextField fx:id="descriptionTextField" promptText="Description">
      <VBox.margin>
         <Insets left="10.0" right="10.0" top="5.0" />
      </VBox.margin></TextField>
    <TextField fx:id="conditionTextField" promptText="Condition d'utilisation">
      <VBox.margin>
         <Insets left="10.0" right="10.0" top="5.0" />
      </VBox.margin></TextField>
    <DatePicker fx:id="dateDebutPicker" promptText="Date de dÃ©but">
      <VBox.margin>
         <Insets top="12.0" />
      </VBox.margin></DatePicker>
    <DatePicker fx:id="dateFinPicker" promptText="Date de fin">
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin></DatePicker>
    <TextField fx:id="nbPlacesTextField" prefHeight="26.0" prefWidth="200.0" promptText="Nombre de places disponibles">
        <VBox.margin>
            <Insets left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </TextField>
    <ComboBox fx:id="typeComboBox" promptText="Type de l'offre">
      <VBox.margin>
         <Insets top="8.0" />
      </VBox.margin></ComboBox>
    <!-- Ajoutez d'autres champs de saisie selon vos besoins -->
    <Button onAction="#handleSave" style="-fx-background-color: #11C613;" text="Enregistrer" textFill="WHITE">
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin></Button>
</VBox>
